@model List<RouteViewModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html lang="en">

<head>
    <title>checkin</title>

</head>
<body>
    

    <section class="vh-100" style="background-image:linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('@Url.Content("~/images/map4.jpg")');">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-lg-12 col-xl-11">
                    <div class="card text-black" style="border-radius: 25px;">
                        <div class="card-body p-md-5">
                            <div class="row justify-content-center">
                                <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                                    <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Check In</p>

                                    <form asp-action="CheckedIn" method="post" class="mx-1 mx-md-4">

                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="fa fa-map-marker fa-lg me-3 fa-fw "></i>
                                            <div class="form-outline flex-fill mb-0">
                                                <label for="route_name">Route Name</label>
                                                <select class="form-control" id="route_name" name="route_id" placeholder="Select Route">
                                                    @foreach (var route in Model)
                                                    {
                                                        <option value=@route.route_id>@route.route_name</option>
                                                    }
                                                </select>
                                            </div>
                                        </div>

                                        <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4 ">

                                            <button type="submit" class="btn btn-light" >Check in  </button>
                                            <div width="5px" height="auto" display="inline-block"></div>



                                        </div>

                                    </form>

                                </div>
                                <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
                                    <img src="~/images/map3.jpg"
                                         class="img-fluid" alt="Sample image">

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

</body>
</html>