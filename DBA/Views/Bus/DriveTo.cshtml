@model Bus
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <link href="~/css/StyleSheet.css" rel="stylesheet">



</head>
<body>
    <header id="header" class="fixed-top d-flex align-items-center">
        <div class="container d-flex justify-content-between">

            <div class="logo">
                <h1>Auto-Bis</h1>

            </div>


        </div>
    </header>
    <section id="hero" class="d-flex flex-column justify-content-center align-items-center " style="background-image:url('@Url.Content("~/hero-bg.png")');">
        <div class="container text-center text-md-left" data-aos="fade-up">
            <div class="container">
                <div class="container h-100">
                    <div class="row d-flex justify-content-center align-items-center h-100">
                        <div class="col-lg-12 col-xl-11">
                            <div class="card text-black" style="border-radius: 25px; background-color:black">
                                <div class="card-body p-md-5">

                                    <div class="table" style="background-color: #eee;">
                                        <div class="table-header">
                                            <div class="header__item"><a id="name" class="filter__link" href="#">Bus ID</a></div>
                                            <div class="header__item"><a id="wins" class="filter__link filter__link--number" href="#">Is Active</a></div>
                                            <div class="header__item"><a id="draws" class="filter__link filter__link--number" href="#">Allocated route</a></div>

                                        </div>

                                        <form>
                                            <div class="table-primary table-striped ">
                                                <div class="table-row">
                                                    <div class="table-data">@Model.bus_id</div>
                                                    <div class="table-data">@Model.is_active</div>
                                                    <div class="table-data">@Model.route_id</div>
                                                </div>

                                            </div>
                                        </form>



                                    </div>


                                </div>
                            </div>
                        </div>
                    </div>
                </div>



            </div>
        </div>
    </section>


</body>