@model List<Bus>
@{
    Layout = "~/Views/Shared/_Layout_Sys.cshtml";
}

<head>
    <link rel="stylesheet" href="~/assets/css/style2.css">
    <link href="~/assets/css/VAM2.css" rel="stylesheet">
</head>

<style>
    body {
        background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)),url('@Url.Content("~/assets/img/hero-bg2.png")');
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-size: cover;
    }
</style>
<body>
    <div class="bus">




        <div class="table-container">

            <h1 class="heading">Bus Status</h1>
            <div class="text-center">
                <button id="add-button" class="btn btn-light btn-outline-light" style="background-color:#5c9f24" type="button" data-bs-toggle="modal" data-bs-target="#addModal">
                    Add Bus <i class="fas fa-plus"></i>
                </button>
            </div>
        </div>

        <div class="table-container">
            <table class="table">
                <thead>
                <th>Bus Id</th>
                <th>Is Active</th>
                <th>On Route</th>
                <th></th>
                </thead>
                <tbody>
                    @foreach (var bs in Model)
                    {
                        <form action="/SystemAdmin/DeleteBus" method="post">
                        <tr>
                            <td>@bs.bus_id</td>
                            <td>@bs.is_active</td>
                            <td>@bs.route_id</td>
                            <td><button name="bus_id" value=@bs.bus_id class="btn delete-button" data-bs-toggle="modal" data-bs-target="#deleteModal" style="background-color:red">Delete</button></td>
                        </tr>
                        </form>

                    }
                </tbody>
            </table>
        </div>
    </div>

        
<!-- Add Buses  -->
<div class="modal fade" id="addModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Add A Bus</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="addBusForm" asp-action="AddBus" method="post">
                    <div class="mb-3">
                        <label for="busnumber" class="form-label">Bus ID</label><br>

                     
                        <input type="text" class="form-control" id="busnumber" name="bus_id" required>
                        <span id="error" class="error"/>
                    </div>
                    <button type="submit" class="btn btn-success" style="background-color: #5c9f24" name="submit">Submit</button>
                </form>
            </div>
            <div class="modal-footer">
                <!-- Add Anything -->
            </div>
        </div>
    </div>
</div>



<!-- Option 1: Bootstrap Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>
</body>