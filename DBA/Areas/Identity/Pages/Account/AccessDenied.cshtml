@page
@model AccessDeniedModel
@{
   
    ViewData["Title"] = "Access denied";
}

<body>
    <section id="hero" class="d-flex flex-column justify-content-center align-items-center " style="background-image:  url('@Url.Content("~/hero-bg.png")');">
        <div class="container text-center text-md-left" data-aos="fade-up">
            <div class="container">
                <div class="container h-100">
                    <div class="row d-flex justify-content-center align-items-center h-100">
                        <div class="col-lg-12 col-xl-11">
                            <div class="card text-black" style="border-radius: 25px; background-color:black">
                                <div class="card-body p-md-5">

                                    <h1 class="text-danger">@ViewData["Title"]</h1>
                                    <p class="text-danger">Because of your assigned role, you do not have access to this resource.</p>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
